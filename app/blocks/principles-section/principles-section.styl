.principles-section
	background $c_dark url('../images/bg/section3bg.png') no-repeat 26px center
	size(100%)
	position relative
	display flex
	align-items center

	.wrapper
		width 100%

	&__map
		position absolute
		top -13px
		right 16px
		bottom 0

		margin auto 0
		max-width 1025px
		max-height 740px
		size(100%)

		background url('../images/bg/map.png') no-repeat center
		background-size cover


		&:after
			content ''
			background linear-gradient(to right, rgba(46, 46, 46, 0) 0, rgba(46, 46, 46, 1) 100%)

			position absolute
			top 0
			right 0

			width 50%
			height 100%


	&__ripple
		position absolute
		size(7px)
		border-radius 50%

		&:before, &:after
			content ''

			position absolute
			top 0
			right 0
			left 0
			bottom 0

			size(8px)
			background-color $c_red
			border-radius 50%
			opacity .4


		&:before
			animation ripple1 2.5s ease-in infinite
		&:after
			animation ripple2 2.5s ease-in infinite

		&--1
			top 57.45%
			left 9.2%

		&--2
			top 60.7%
			left 22.9%

			&:before, &:after
				animation-delay 1.3s

		&--3
			top 73.4%
			left 22.9%

			&:before, &:after
				animation-delay 1.5s

		&--4
			top 47.8%
			left 29.9%

			&:before, &:after
				animation-delay 1.7s

		&--5
			top 57.4%
			left 32.2%

			&:before, &:after
				animation-delay 1.9s

		&--6
			top 51.1%
			left 36.8%

			&:before, &:after
				animation-delay 2.1s

		&--7
			top 35.1%
			left 39.15%

			&:before, &:after
				animation-delay 2.3s

		&--8
			top 31.9%
			left 41.4%

			&:before, &:after
				animation-delay 2.5s

		&--9
			top 44.65%
			left 43.7%

			&:before, &:after
				animation-delay 2.7s

		&--10
			top 60.6%
			left 45.95%

			&:before, &:after
				animation-delay 2.9s

		&--11
			top 63.8%
			left 48.3%

			&:before, &:after
				animation-delay 3.1s

		&--12
			top 25.6%
			left 48.3%

			&:before, &:after
				animation-delay 3.3s

		&--13
			top 38.4%
			left 50.5%

			&:before, &:after
				animation-delay 3.5s

		&--14
			top 19.15%
			left 52.9%

			&:before, &:after
				animation-delay 3.7s

		&--15
			top 41.45%
			left 57.5%

			&:before, &:after
				animation-delay 3.9s

		&--16
			top 54.25%
			left 71.2%

			&:before, &:after
				animation-delay 4.1s

	&__title
		font-size 50px
		font-weight 900
		line-height 60px
		letter-spacing .03em
		color $c_title_white

		margin-bottom 70px

	&__contetnt
		max-width 450px

		margin-top -28px
		margin-right auto
		padding-left 12px

	&__item
		&:not(:last-child)
			margin-bottom 40px

		&:last-child
			margin-bottom 42px

	&__text
		font-size 16px
		line-height 29px
		letter-spacing .02em
		color $c_title_white

	&__text-bold
		font-weight 700

	&__text-small
		font-size 14px
		line-height 1.5


	@keyframes ripple1
		0%
			transform scale(1)
		50%
			transform scale(2)
		100%
			transform scale(1)
			opacity 0

	@keyframes ripple2
		0%
			transform scale(0)
		50%
			transform scale(2.7)
		100%
			transform scale(1)
			opacity 0

